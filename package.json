{
  "name": "accessibility-simulator",
  "displayName": "Simulator of visual impairments",
  "version": "1.0.0",
  "description": "Simulator of visual impairments. Helps to check if your website is accessible and understand how you can improve users experience.",
  "author": "Daria Artemova",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "test": "plasmo test"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.7.2",
    "plasmo": "0.82.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@types/chrome": "0.0.241",
    "@types/node": "20.4.2",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.27",
    "prettier": "3.0.0",
    "tailwindcss": "^3.3.3",
    "typescript": "5.1.6"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs",
      "scripting"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/*.png"
        ],
        "matches": [
          "https://*/*"
        ]
      }
    ]
  }
}
